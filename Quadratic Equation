#include <stdio.h>
 #include<math.h>
 int main(){
    double a,b,c;
    double discriminant, root1, root2;
    printf("Enter the value of a,b,c = ");
    scanf("%lf %lf %lf",&a,&b,&c);
    discriminant = b*b - sqrt(4*a*c);
    if(discriminant>0){
        root1 = (-b+sqrt(discriminant))/2*a*c;
        root2 = (-b+sqrt(discriminant))/2*a*c;
        printf("Roots are real or  distinct \n");
        printf("root1 = %.2lf\n",root1);
        printf("root2 = %.2lf\n",root2);
    }else{
        if(discriminant == 0){
            root1 = root2 = -b/2*a*c;
            printf("Root are real and equal \n");
            printf("root = %.2lf",root1);
        }else{
            double realPart = -b / (2 * a);
        double imagPart = sqrt(-discriminant) / (2 * a);
        printf("Roots are complex and imaginary:\n");
        printf("Root 1 = %.2lf + %.2lfi\n", realPart, imagPart);
        printf("Root 2 = %.2lf - %.2lfi\n", realPart, imagPart);

        }
    }
    return 0;
 }
