#include<stdio.h>
int main (){
    int i, j, n;
    printf("write the value of 'n' number of rows:");
    scanf("%d",&n);
        for(i=1; i<=n; i++){
        for(j=n-i; j>=0; j--){
            printf(" ");
        }
        for(j=1; j<=i; j++){
            printf("*");
        }
        printf("\n");
    }
    for(i=n; i>=1; i--){
        for(j=n+1-i; j>=0; j--){
            printf(" ");
        }
        for(j=1; j<=i-1; j++){
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
